import random

def my_strategy(opponent_history):
    if len(opponent_history) == 0:
        return 'x'
    else:
        num_splits = opponent_history.count('x')
        num_steals = opponent_history.count('y')
        
        if num_steals > 0:
            ratio = num_splits / num_steals
      
           
        
        if ratio > 1.0:
            return 'y'
        else:
            return 'x'

